{
  "name": "ci-toolkit",
  "version": "0.2.22",
  "private": true,
  "description": "A collection of tools supporting continuous integration",
  "scripts": {
    "build": "npm run build:common && npm run build:pipeline && npm run build:render && npm run build:version",
    "build:common": "cd modules/common && spago build",
    "build:pipeline": "cd modules/pipeline && spago build",
    "build:render": "cd modules/render && spago build",
    "build:version": "cd modules/version && spago build",
    "bundle": "npm run bundle:pipeline && npm run bundle:render && npm run bundle:version && npm run bundle:website",
    "bundle:pipeline": "cd modules/pipeline && spago bundle-app --to dist/index.js",
    "bundle:render": "cd modules/render && spago bundle-app --to dist/index.js",
    "bundle:version": "cd modules/version && spago bundle-app --to dist/index.js",
    "bundle:website": "cd modules/website && parcel build",
    "format:apply": "npm run format:apply:common && npm run format:apply:pipeline && npm run format:apply:render && npm run format:apply:version",
    "format:check": "npm run format:check:common && npm run format:check:pipeline && npm run format:check:render && npm run format:check:version",
    "format:apply:common": "purs-tidy format-in-place 'modules/common/src/**/*.purs' 'modules/common/test/**/*.purs'",
    "format:apply:pipeline": "purs-tidy format-in-place 'modules/pipeline/src/**/*.purs' 'modules/pipeline/test/**/*.purs'",
    "format:apply:render": "purs-tidy format-in-place 'modules/render/src/**/*.purs' 'modules/render/test/**/*.purs'",
    "format:apply:version": "purs-tidy format-in-place 'modules/version/src/**/*.purs' 'modules/version/test/**/*.purs'",
    "format:check:common": "purs-tidy check 'modules/common/src/**/*.purs' 'modules/common/test/**/*.purs'",
    "format:check:pipeline": "purs-tidy check 'modules/pipeline/src/**/*.purs' 'modules/pipeline/test/**/*.purs'",
    "format:check:render": "purs-tidy check 'modules/render/src/**/*.purs' 'modules/render/test/**/*.purs'",
    "format:check:version": "purs-tidy check 'modules/version/src/**/*.purs' 'modules/version/test/**/*.purs'",
    "generate:docs": "cd modules/doc-gen && spago run --exec-args ../..",
    "hooks:setup": "git config core.hooksPath .git-hooks",
    "ide:common": "cd modules/common && pscid --test",
    "ide:pipeline": "cd modules/pipeline && pscid --test",
    "ide:render": "cd modules/render && pscid --test",
    "ide:version": "cd modules/version && pscid --test",
    "lint:commits": "npx --no-install -- commitlint --to HEAD",
    "postinstall": "[ -z \"${CI}\" ] && npm run hooks:setup || echo 'skipping hooks setup'",
    "publish:pipeline": "cd modules/pipeline && npm publish",
    "publish:render": "cd modules/render && npm publish",
    "publish:version": "cd modules/version && npm publish",
    "release:git": "standard-version",
    "release:gh": "conventional-github-releaser",
    "test": "npm run test:common && npm run test:pipeline && npm run test:pipeline && npm run test:version",
    "test:common": "cd modules/common && nyc spago test --source-maps",
    "test:pipeline": "cd modules/pipeline && spago test --source-maps",
    "test:render": "cd modules/render && spago test --source-maps",
    "test:version": "cd modules/version && spago test --source-maps"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mstream/ci-toolkit.git"
  },
  "author": "Maciej Laciak <maciej.laciak@gmail.com> (https://github.com/mstream/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mstream/ci-toolkit/issues"
  },
  "homepage": "https://github.com/mstream/ci-toolkit#readme",
  "devDependencies": {
    "@artur0prets/parcel-transformer-remark": "0.0.3",
    "@commitlint/cli": "^15",
    "@commitlint/config-conventional": "^15",
    "@gammons/demo-cli": "0.0.1",
    "@mdi/font": "^6",
    "@parcel/transformer-inline-string": "^2",
    "conventional-github-releaser": "^3",
    "date-fns": "^2",
    "milligram": "^1",
    "modern-normalize": "^1",
    "nyc": "^15",
    "parcel": "^2",
    "pscid": "^2",
    "purescript": "~0.14",
    "purs-tidy": "~0.6",
    "spago": "~0.20",
    "standard-version": "^9"
  }
}
